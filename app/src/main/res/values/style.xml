<?xml version="1.0" encoding="utf-8"?>

<resources xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- TextView -->
    <style name="style.textView" parent=""/>
    <style name="style.textView.title">
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:textColor">@color/color.button.clickable</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textAlignment">center</item>
    </style>
    <style name="style.textView.desc">
        <item name="android:textColor">@color/color.text.desc</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_marginVertical">8dp</item>
    </style>

    <!-- EditText -->
    <style name="style.editText" parent="">
        <item name="android:layout_height">50dp</item>
    </style>
    <style name="style.editText.mailAddress">
        <item name="android:autofillHints">emailAddress</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>
    <style name="style.editText.password">
        <item name="android:autofillHints">password</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
    </style>
    <style name="style.editText.multiLine">
        <item name="android:ems">10</item>
        <item name="android:gravity">start|top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="style.radioButton" parent="">
        <item name="android:layout_height">48dp</item>
    </style>
</resources>