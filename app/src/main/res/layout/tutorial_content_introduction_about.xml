<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color.background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.introduction.about.title"
        style="@style/style.textView.title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.introduction.about.desc"
        style="@style/style.textView.desc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.introduction.about.desc2"
        style="@style/style.textView.desc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.introduction.about.example"
        style="@style/style.textView.desc"
        android:textSize="15sp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.introduction.about.desc3"
        style="@style/style.textView.desc"/>
</LinearLayout>