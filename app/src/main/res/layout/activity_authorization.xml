<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:background="@color/color.background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="36dp"
        android:layout_marginVertical="128dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginBottom="16dp"
            android:text="@string/text.authorization.title"
            android:textAlignment="center"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/mailAddress"
            tools:layout_editor_absoluteX="58dp"
            android:textColor="@color/color.text.title"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.authorization.desc1"
            android:textColor="@color/color.text.desc"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.authorization.desc2"
            android:textColor="@color/color.text.desc"
            android:layout_marginBottom="8dp"
            android:textSize="20sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp"
            android:id="@+id/linear.authorization.editTextParent">

            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:maxLength="1"
                android:id="@+id/editText.authorization.1"
                android:nextFocusForward="@+id/editText.authorization.2" />
            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                android:maxLength="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="55dp"
                android:id="@+id/editText.authorization.2"
                android:nextFocusForward="@+id/editText.authorization.3"/>
            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                android:maxLength="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0"
                tools:layout_editor_absoluteX="103dp"
                android:id="@+id/editText.authorization.3"
                android:nextFocusForward="@+id/editText.authorization.4"/>
            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                android:maxLength="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="159dp"
                android:id="@+id/editText.authorization.4"
                android:nextFocusForward="@+id/editText.authorization.5"/>
            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                android:maxLength="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="215dp"
                android:id="@+id/editText.authorization.5"
                android:nextFocusForward="@+id/editText.authorization.6"/>
            <Space
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"/>
            <EditText
                android:layout_width="48dp"
                android:layout_height="80dp"
                android:inputType="numberSigned"
                android:maxLength="1"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:layout_editor_absoluteX="275dp"
                android:id="@+id/editText.authorization.6"
                android:nextFocusForward="@+id/button.authorization.enter"/>
        </LinearLayout>
        <Button
            android:id="@+id/button.authorization.enter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.authorization.enter"
            android:textSize="23sp"
            app:backgroundTint="@null"
            android:background="@drawable/button"
            android:layout_marginBottom="32dp"
            android:textColor="@color/color.text.button"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.authorization.ifNoMail"
            android:textColor="@color/color.text.desc"
            android:layout_marginBottom="8dp"
            android:textSize="17sp"/>
        <Button
            android:id="@+id/button.authorization.enter.reSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.authorization.enter.reSend"
            android:textSize="23sp"
            app:backgroundTint="@null"
            android:background="@drawable/button"
            android:textColor="@color/color.text.button"/>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame.authorization.fragmentFrame"
        android:elevation="100dp" />

</androidx.constraintlayout.widget.ConstraintLayout>