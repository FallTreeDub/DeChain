<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/color.background">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.tutorial.content.introduction.about3.title"
            style="@style/style.textView.title"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_group"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginVertical="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.subtitle"
                style="@style/style.textView.title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc"
                style="@style/style.textView.desc"
                android:textColor="@color/color.text.emphasize"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc2"
                style="@style/style.textView.desc"
                android:textColor="@color/color.text.emphasize"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc3"
                style="@style/style.textView.desc" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_group"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginVertical="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.subtitle2"
                style="@style/style.textView.title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc4"
                style="@style/style.textView.desc" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc5"
                style="@style/style.textView.desc" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc6"
                style="@style/style.textView.desc" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/question_group"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_marginVertical="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.subtitle3"
                style="@style/style.textView.title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.tutorial.content.introduction.about3.desc7"
                style="@style/style.textView.desc" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>