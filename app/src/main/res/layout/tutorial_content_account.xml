    android:orientation="vertical"
    android:background="@color/color.background">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.account.type.title"
        style="@style/style.textView.title"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.account.type.loginScreen.desc"
        style="@style/style.textView.desc"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text.tutorial.content.account.type.loginScreen.desc2"
        style="@style/style.textView.desc"/>
    <ImageView
        android:background="@drawable/question_group"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:src="@drawable/screenshot_20251204_193103_dechain"
