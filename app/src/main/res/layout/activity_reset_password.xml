<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    tools:context=".ResetPasswordActivity"
    android:background="@color/color.background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginVertical="128dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/text.resetPass.title"
                android:textAlignment="center"
                android:textColor="@color/color.text.title"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/mailAddress"
                tools:layout_editor_absoluteX="58dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:text="@string/text.resetPass.desc1"
                android:textColor="@color/color.text.desc"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editText.resetPass.mailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="emailAddress"
                android:ems="10"
                android:hint="@string/hint.resetPass.mailAddress"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="71dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/editText.resetPass.newPassword"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/hint.resetPass.newPassword"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:textIsSelectable="false"
                    tools:layout_editor_absoluteX="71dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:passwordToggleEnabled="true">
                <EditText
                    android:id="@+id/editText.resetPass.newPasswordCheck"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="16dp"
                    android:hint="@string/hint.resetPass.newPasswordCheck"
                    android:inputType="textPassword"
                    android:longClickable="false"
                    android:textIsSelectable="false"
                    tools:layout_editor_absoluteX="71dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/question_group"
                android:orientation="vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text.resetPass.passwordCondition.title"
                    android:textColor="@color/color.text.title"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text.createAccount.passwordCondition.desc1"
                    android:textColor="@color/color.text.title"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text.createAccount.passwordCondition.desc2"
                    android:textColor="@color/color.text.title"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="@string/text.createAccount.passwordCondition.desc3"
                    android:textColor="@color/color.text.title"
                    android:textSize="16sp" />
            </LinearLayout>

            <Button
                android:id="@+id/button.resetPass.enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:background="@drawable/button"
                android:text="@string/button.resetPass.enter"
                android:textColor="@color/color.text.button"
                android:textSize="23sp"
                app:backgroundTint="@null" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text.resetPass.desc2"
                android:textColor="@color/color.text.desc"
                android:textSize="20sp" />

            <FrameLayout
                android:id="@+id/frame.resetPass.fragmentFrame"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="100dp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>