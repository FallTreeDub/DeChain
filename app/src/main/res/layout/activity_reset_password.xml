<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/frame.resetPass.fragmentFrame">
    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="36dp"
            android:layout_marginVertical="128dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginBottom="16dp"
                android:text="@string/text.resetPass.title"
                android:textAlignment="center"
                android:textSize="30sp"
                app:layout_constraintBottom_toTopOf="@+id/mailAddress"
                tools:layout_editor_absoluteX="58dp"
                android:textColor="@color/color.text.title"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color.text.desc"
                android:layout_marginBottom="32dp"
                android:textSize="20sp"
                android:text="@string/text.resetPass.desc1"/>
            <EditText
                android:id="@+id/editText.resetPass.mailAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:autofillHints="emailAddress"
                android:ems="10"
                android:hint="@string/hint.resetPass.mailAddress"
                android:inputType="textEmailAddress"
                tools:layout_editor_absoluteX="71dp" />
            <EditText
                android:id="@+id/editText.resetPass.newPassword"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:longClickable="false"
                android:textIsSelectable="false"
                android:hint="@string/hint.resetPass.newPassword"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="71dp" />
            <EditText
                android:id="@+id/editText.resetPass.newPasswordCheck"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="16dp"
                android:longClickable="false"
                android:textIsSelectable="false"
                android:hint="@string/hint.resetPass.newPasswordCheck"
                android:inputType="textPassword"
                tools:layout_editor_absoluteX="71dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/question_group"
                android:padding="8dp"
                android:layout_marginBottom="8dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text.resetPass.passwordCondition.title"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color.text.title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text.resetPass.passwordCondition.desc1"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color.text.title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text.resetPass.passwordCondition.desc2"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color.text.title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text.resetPass.passwordCondition.desc3"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp"
                    android:textColor="@color/color.text.title"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text.resetPass.passwordCondition.symbolDesc"
                    android:textSize="16sp"
                    android:textColor="@color/color.text.title"/>
            </LinearLayout>
            <Button
                android:id="@+id/button.resetPass.enter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button.resetPass.enter"
                android:textSize="23sp"
                app:backgroundTint="@null"
                android:background="@drawable/button"
                android:layout_marginBottom="8dp"
                android:textColor="@color/color.text.button"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/color.text.desc"
                android:textSize="20sp"
                android:text="@string/text.resetPass.desc2"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>