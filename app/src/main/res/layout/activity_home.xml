<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout.home.main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:background="@color/color.background"
    android:orientation="vertical"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout.home.contents"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/layout.home.bottomBar"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text.home.title.graph"
            android:textColor="@color/color.button.clickable"
            android:textSize="24sp" />
        <!-- ここにグラフビューを追加 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/view.button.home.graph.all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:text="@string/text.home.button.graphShow.all"
                android:textSize="24sp"
                app:backgroundTint="@null" />

            <Button
                android:id="@+id/view.button.home.graph.week"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_weight="0.5"
                android:background="@drawable/button"
                android:text="@string/text.home.button.graphShow.week"
                android:textSize="24sp"
                app:backgroundTint="@null" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout.home.bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="@+id/layout.home.contents"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/question_group"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/view.home.button.usage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/book_2_48dp_e3e3e3_fill0_wght400_grad0_opsz48" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>