<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpDateActivity"
    android:padding="8dp"
    android:background="@color/color.background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="128dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            style="@style/style.textView.title"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/text.update.title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text.update.desc"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <Button
            android:id="@+id/button.update.startUpdate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button"
            android:text="@string/text.update.button"
            android:textColor="@color/color.text.button"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="8dp"
            app:backgroundTint="@null"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="64dp" />

        <ProgressBar
            android:id="@+id/view.update.progressCircle"
            style="?android:attr/progressBarStyle"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:indeterminate="true"
            android:indeterminateBehavior="repeat"
            android:indeterminateTint="@color/color.button.clickable"
            android:indeterminateTintMode="src_in"
            tools:layout_editor_absoluteY="298dp" />

        <TextView
            android:id="@+id/view.update.textView.downloadingText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.update.downloading"
            android:textColor="@color/color.text.desc"
            android:textSize="24sp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>