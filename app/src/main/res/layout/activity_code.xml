<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CodeActivity"
    android:background="@color/color.background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginVertical="64dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            style="@style/style.textView.title"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="@string/text.code.title"
            app:layout_constraintBottom_toTopOf="@+id/mailAddress"
            tools:layout_editor_absoluteX="58dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text.code.desc"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/text.code.hereToAccess"
            style="@style/style.textView.title"
            android:textAlignment="center"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/github"/>
        <TextView
            android:id="@+id/text.code.githubLink"
            android:text=""
            android:textColor="@color/color.text.title"
            android:autoLink="web"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>
        <Space android:layout_height="16dp"
            android:layout_width="match_parent"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color.text.title"
            android:textSize="16sp"
            android:text="@string/text.code.question.title"/>
        <Space android:layout_height="16dp"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp"
            android:text="@string/text.code.question.github.q"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp"
            android:text="@string/text.code.question.github.a"/>
        <Space android:layout_height="16dp"
            android:layout_width="match_parent"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp"
            android:text="@string/text.code.question.appDownload.q"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/color.text.desc"
            android:textSize="16sp"
            android:text="@string/text.code.question.appDownload.a"/>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>